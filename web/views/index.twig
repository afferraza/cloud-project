      <table style="margin-left: 5%" id="customers">
        <tr>
          <th>Item</th>
          <th>Price per Unit</th>
          {% if type == 1 %}
            <th></th>
          {% endif %}
        </tr>
        {% for c in cat1 %}
          <tr>
            <td>{{ c["name"] }}</td>
            <td>{{ c["price"] }}</td>
            {% if type == 1 %}
              <td>
                <form action="action" method="post">
                  <input type="hidden" name="id" value="{{ c["id"] }}">
                  <input name="edit" type="submit" value="Edit">
                  <input name="delete" type="submit" value="Delete">
                </form>
              </td>
            {% endif %}
          </tr>
        {% endfor %}
      </table>

      <table style="margin-right: 5%; float: right" id="customers">
        <tr>
          <th>Item</th>
          <th>Price per Unit</th>
          {% if type == 1 %}
            <th></th>
          {% endif %}
        </tr>
        {% for c in cat2 %}
          <tr>
            <td>{{ c["name"] }}</td>
            <td>{{ c["price"] }}</td>
            {% if type == 1 %}
              <td>
                <form action="action" method="post">
                  <input type="hidden" name="id" value="{{ c["id"] }}">
                  <input name="edit" type="submit" value="Edit">
                  <input name="delete" type="submit" value="Delete">
                </form>
              </td>
            {% endif %}
          </tr>
        {% endfor %}
      </table>



      <div class="clear"></div>

      <div style="margin-left: 5%; display: inline-block">
        <form action="logout" method="get">
          <input type="submit" value="Logout">
        </form>
      </div>

      {% if type==1 %}
        <div style="margin-left: 1%; display: inline-block;">
          <form action="addItem" method="get">
            <input type="submit" value="Add Item">
          </form>
        </div>
      {% endif %}

      <div style="margin-left: 1%; display: inline-block;">
        <form action="offerMenu" method="get">
          <input type="submit" value="Special Offer">
        </form>
      </div>
    </div>

{% endblock %}
